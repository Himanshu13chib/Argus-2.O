# Project Argus Environment Configuration
# Copy this file to .env and update values for your environment

# Database Configuration
POSTGRES_PASSWORD=argus_secure_pass_change_me
DATABASE_URL=postgresql://argus_user:argus_secure_pass_change_me@localhost:5432/project_argus

# Redis Configuration
REDIS_PASSWORD=redis_secure_pass_change_me
REDIS_URL=redis://:redis_secure_pass_change_me@localhost:6379/0

# MinIO Object Storage
MINIO_ROOT_USER=argus_admin
MINIO_ROOT_PASSWORD=minio_secure_pass_change_me
MINIO_ENDPOINT=localhost:9000
MINIO_BUCKET_NAME=argus-evidence

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_change_me_to_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Encryption Keys
ENCRYPTION_KEY=your_32_byte_encryption_key_change_me
HMAC_SECRET_KEY=your_hmac_secret_key_change_me

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Edge Node Configuration
EDGE_NODE_ID=edge_node_001
CAMERA_RTSP_URLS=rtsp://camera1:554/stream,rtsp://camera2:554/stream
DETECTION_CONFIDENCE_THRESHOLD=0.7
TRACKING_MAX_AGE=30

# Dashboard Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_MAP_API_KEY=your_map_api_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/argus.log

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Development Configuration
ENVIRONMENT=development
DEBUG=false
RELOAD=false

# Alert Configuration
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=alerts@yourcompany.com
ALERT_EMAIL_PASSWORD=your_email_password
ALERT_SMS_API_KEY=your_sms_api_key

# Performance Configuration
MAX_CONCURRENT_CAMERAS=100
DETECTION_BATCH_SIZE=4
TRACKING_UPDATE_INTERVAL=1.0
ALERT_PROCESSING_WORKERS=2

# Storage Configuration
EVIDENCE_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Security Policies
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_SPECIAL_CHARS=true
MFA_REQUIRED=true
SESSION_TIMEOUT_MINUTES=480  # 8 hours
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30